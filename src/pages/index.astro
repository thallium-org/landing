---
import { Code } from "astro:components";
import Layout from "../layout.astro";
import Footer from "../components/Footer.astro";

const mainContent = `

<!-- welcome -->
<p>More to come...</p>

`.trim();
---

<Layout title="thallium">
    <div class="flex justify-center pb-10 border-b border-b-zinc-800">
        <div>
            <h1
                class="font-bold font-spartan md:text-[24rem] text-8xl tracking-[-0.08em] leading-96 antialiased md:mt-0 -mt-20"
            >
                thallium.
            </h1>
            <h2 class="font-geist-mono md:-mt-20 -mt-40 md:ml-8 ml-2">
                Web Services
            </h2>
        </div>
    </div>
    <main class="text-zinc-300 font-geist-mono flex max-w-7xl mx-auto">
        <div class="flex-1 p-6">
            <Code
                class="bg-transparent!"
                lang="astro"
                code={mainContent}
                theme="poimandres"
            />
            <div class="w-2 h-6 bg-zinc-800 animate-blink"></div>
        </div>
        <div class="border-l border-zinc-800 min-w-8"></div>
    </main>
    <Footer />
</Layout>
